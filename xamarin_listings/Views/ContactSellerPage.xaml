<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xamarin_listings.Views.ContactSellerPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Votre message concerne l'annonce : "/>
            <Label Text="{Binding Announcement.Title}"/>
            <Label Text="{Binding Announcement.Price}"/>
            <Label Text="Votre message"/>
            <Editor Placeholder="Bonjour ! Votre annonce m'intérèsse"
                    HeightRequest="200" />
            <Button Text="ENVOYER"></Button>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>